// Theme matching ParkHub Server design system
// Dark blue-purple theme with red-pink accents

// Theme settings - can be modified by the app
export global ThemeSettings {
    in-out property <int> mode: 0;  // 0=Dark (default)
    in-out property <float> font-scale: 1.0;  // 1.0 = normal, 1.25 = large, 1.5 = extra large
    in-out property <bool> reduce-motion: false;
}

export global Theme {
    // === Colors matching server design ===

    // Background colors (dark blue-purple theme)
    out property <color> background: #1a1a2e;          // Dark blue-purple
    out property <color> surface: #16213e;             // Darker blue
    out property <color> surface-elevated: #1e2a4a;    // Slightly lighter blue

    // Primary colors (Navy blue for buttons/cards)
    out property <color> primary: #0f3460;             // Navy blue
    out property <color> primary-hover: #0a2540;       // Darker navy
    out property <color> primary-light: #1a4a80;       // Lighter navy
    out property <color> on-primary: #ffffff;

    // Accent color (Red-pink - main brand color)
    out property <color> accent: #e94560;              // Red-pink
    out property <color> accent-hover: #d63850;        // Darker red-pink

    // Secondary/Success (Teal green)
    out property <color> secondary: #00b894;           // Teal
    out property <color> secondary-hover: #009975;     // Darker teal

    // Semantic colors
    out property <color> error: #e94560;               // Red-pink (same as accent)
    out property <color> warning: #f39c12;             // Orange
    out property <color> info: #3b82f6;                // Blue
    out property <color> success: #00b894;             // Teal

    // Text colors
    out property <color> text-primary: #eaeaea;        // Light gray
    out property <color> text-secondary: #b0b0b0;      // Medium gray
    out property <color> text-tertiary: #8b8b8b;       // Darker gray
    out property <color> text-muted: #6b6b6b;          // Muted gray

    // Border colors
    out property <color> border: #2a2a4a;              // Dark purple border
    out property <color> border-light: #3a3a5a;        // Lighter border

    // === Typography with scaling ===
    out property <length> font-size-xs: 11px * ThemeSettings.font-scale;
    out property <length> font-size-sm: 13px * ThemeSettings.font-scale;
    out property <length> font-size-md: 15px * ThemeSettings.font-scale;
    out property <length> font-size-lg: 17px * ThemeSettings.font-scale;
    out property <length> font-size-xl: 20px * ThemeSettings.font-scale;
    out property <length> font-size-2xl: 24px * ThemeSettings.font-scale;
    out property <length> font-size-3xl: 30px * ThemeSettings.font-scale;

    // === Spacing (4px base, matching Tailwind) - scaled ===
    out property <length> spacing-xs: 4px * ThemeSettings.font-scale;
    out property <length> spacing-sm: 8px * ThemeSettings.font-scale;
    out property <length> spacing-md: 16px * ThemeSettings.font-scale;
    out property <length> spacing-lg: 24px * ThemeSettings.font-scale;
    out property <length> spacing-xl: 32px * ThemeSettings.font-scale;
    out property <length> spacing-2xl: 48px * ThemeSettings.font-scale;

    // === Border Radius ===
    out property <length> radius-sm: 4px;
    out property <length> radius-md: 8px;
    out property <length> radius-lg: 12px;
    out property <length> radius-xl: 16px;
    out property <length> radius-2xl: 24px;
    out property <length> radius-full: 9999px;

    // === Border width ===
    out property <length> border-width: 1px;

    // === Touch Targets - scaled ===
    out property <length> touch-target-min: 44px * ThemeSettings.font-scale;
    out property <length> button-height: 48px * ThemeSettings.font-scale;
    out property <length> input-height: 44px * ThemeSettings.font-scale;

    // === Animation Durations (respects reduce-motion) ===
    out property <duration> animation-fast: ThemeSettings.reduce-motion ? 0ms : 150ms;
    out property <duration> animation-normal: ThemeSettings.reduce-motion ? 0ms : 250ms;
    out property <duration> animation-slow: ThemeSettings.reduce-motion ? 0ms : 350ms;
}
