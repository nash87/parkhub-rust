// Individual parking slot component - realistic car-sized design
component ParkingSlot inherits Rectangle {
    in property <int> slot-number;
    in property <SlotStatus> status: SlotStatus.Available;
    in property <string> license-plate: "";
    in property <string> end-time: "";
    in property <bool> is-top-row: false;

    callback tapped();

    property <bool> is-interactive: status != SlotStatus.Disabled && status != SlotStatus.Occupied;
    property <bool> is-hovered: touch.has-hover && is-interactive;

    width: 72px;
    height: 130px;
    border-radius: 6px;
    background: #1a1a1a;
    border-width: status == SlotStatus.Selected ? 3px :
                  status == SlotStatus.MyBooking ? 2px : 2px;
    border-color: status == SlotStatus.Selected ? Theme.primary :
                  status == SlotStatus.MyBooking ? Theme.info :
                  is-hovered ? #505050 :
                  #333333;
    drop-shadow-blur: is-hovered ? 12px : 0;
    drop-shadow-color: is-hovered ? Theme.primary.transparentize(0.6) : transparent;

    animate background { duration: 150ms; }
    animate border-color { duration: 150ms; }
    animate drop-shadow-blur { duration: 150ms; }

    touch := TouchArea {
        enabled: root.is-interactive;
        clicked => { root.tapped(); }
        mouse-cursor: root.is-interactive ? pointer : default;
    }

    // Parking lines on the sides (marking lines)
    Rectangle {
        width: 3px;
        height: parent.height - 8px;
        x: 2px;
        y: 4px;
        background: #404040;
        border-radius: 1px;
    }
    Rectangle {
        width: 3px;
        height: parent.height - 8px;
        x: parent.width - 5px;
        y: 4px;
        background: #404040;
        border-radius: 1px;
    }

    // Slot number badge at top
    Rectangle {
        width: 36px;
        height: 24px;
        x: (parent.width - self.width) / 2;
        y: 6px;
        border-radius: 6px;
        background: status == SlotStatus.Selected ? Theme.primary :
                    status == SlotStatus.Available ? Theme.secondary :
                    status == SlotStatus.MyBooking ? Theme.info :
                    status == SlotStatus.Occupied ? #c0392b :
                    #333333;

        Text {
            text: root.slot-number;
            font-size: 14px;
            font-weight: 700;
            color: white;
            horizontal-alignment: center;
            vertical-alignment: center;
        }
    }

    // Available state - show "P" symbol
    if status == SlotStatus.Available : Rectangle {
        width: 44px;
        height: 60px;
        x: (parent.width - self.width) / 2;
        y: 38px;
        border-radius: 8px;
        background: Theme.secondary.transparentize(0.85);
        border-width: 2px;
        border-color: Theme.secondary.transparentize(0.5);

        Text {
            text: "P";
            font-size: 36px;
            font-weight: 900;
            color: Theme.secondary;
            horizontal-alignment: center;
            vertical-alignment: center;
        }
    }

    // Selected state - show checkmark
    if status == SlotStatus.Selected : Rectangle {
        width: 44px;
        height: 60px;
        x: (parent.width - self.width) / 2;
        y: 38px;
        border-radius: 8px;
        background: Theme.primary.transparentize(0.7);
        border-width: 2px;
        border-color: Theme.primary;

        // Graphical checkmark
        Rectangle {
            width: 28px;
            height: 28px;
            x: (parent.width - self.width) / 2;
            y: (parent.height - self.height) / 2;
            background: Theme.primary;
            border-radius: 14px;

            // Check stem (short part)
            Rectangle {
                width: 4px;
                height: 10px;
                x: 8px;
                y: 11px;
                background: white;
                border-radius: 2px;
            }
            // Check stem (long part)
            Rectangle {
                width: 4px;
                height: 16px;
                x: 16px;
                y: 5px;
                background: white;
                border-radius: 2px;
            }
        }
    }

    // Occupied state - show top-down car
    if status == SlotStatus.Occupied : TopDownCar {
        x: (parent.width - self.width) / 2;
        y: 34px;
        car-color: #374151;
        glass-color: #1f2937;
    }

    // My booking state - show top-down car with highlight color
    if status == SlotStatus.MyBooking : TopDownCar {
        x: (parent.width - self.width) / 2;
        y: 34px;
        car-color: Theme.info.darker(0.2);
        glass-color: Theme.info.darker(0.5);
        is-my-booking: true;
    }

    // License plate display for occupied slots
    if (status == SlotStatus.Occupied || status == SlotStatus.MyBooking) && license-plate != "" : Rectangle {
        width: 58px;
        height: 14px;
        x: (parent.width - self.width) / 2;
        y: parent.height - 18px;
        border-radius: 2px;
        background: #1a1a1a;
        border-width: 1px;
        border-color: #333;

        Text {
            text: root.license-plate;
            font-size: 8px;
            font-weight: 600;
            color: #888;
            horizontal-alignment: center;
            vertical-alignment: center;
        }
    }
}

// Driving lane between rows
component DrivingLane inherits Rectangle {
    height: 40px;
    background: #141414;
    border-radius: 4px;

    // Center dashed line
    HorizontalLayout {
        alignment: center;
        spacing: 12px;
        y: (parent.height - 4px) / 2;
        height: 4px;

        for i in 10: Rectangle {
            width: 24px;
            height: 4px;
            border-radius: 2px;
            background: #fcd34d;
            opacity: 0.6;
        }
    }

    // Lane direction arrows
    HorizontalLayout {
        alignment: center;
        spacing: 60px;
        y: (parent.height - 12px) / 2;
        height: 12px;

        for i in 3: Rectangle {
            width: 16px;
            height: 12px;
            background: transparent;

            // Arrow shape using rectangles
            Rectangle {
                width: 8px;
                height: 2px;
                x: 0;
                y: 5px;
                background: #4a4a4a;
                border-radius: 1px;
            }
            Rectangle {
                width: 6px;
                height: 2px;
                x: 6px;
                y: 2px;
                background: #4a4a4a;
                border-radius: 1px;
            }
            Rectangle {
                width: 6px;
                height: 2px;
                x: 6px;
                y: 8px;
                background: #4a4a4a;
                border-radius: 1px;
            }
        }
    }
}

// Duration selector component
component DurationSelector inherits Rectangle {
    in-out property <int> selected-minutes: 60;
    in property <[DurationOption]> options: [];

    callback duration-changed(int);

    height: 45px;
    background: transparent;

    HorizontalLayout {
        spacing: Theme.spacing-xs;

        for option in root.options : Rectangle {
            horizontal-stretch: 1;
            height: 40px;
            border-radius: Theme.radius-sm;
            background: root.selected-minutes == option.minutes ?
                        Theme.primary : Theme.surface;

            TouchArea {
                clicked => {
                    root.selected-minutes = option.minutes;
                    root.duration-changed(option.minutes);
                }
                mouse-cursor: pointer;
            }

            Text {
                text: option.label;
                font-size: Theme.font-size-sm;
                color: root.selected-minutes == option.minutes ?
                       Theme.on-primary : Theme.text-primary;
                horizontal-alignment: center;
                vertical-alignment: center;
            }
        }
    }
}

// Main parking view component
export component ParkingView inherits Rectangle {
    background: Theme.background;

    // Properties
    in property <string> lot-name: "Parking";
    in property <int> available-slots: 0;
    in property <int> total-slots: 10;
    in property <[ParkingSlotData]> slots: [];
    in property <[BookingData]> my-bookings: [];
    in property <[DurationOption]> duration-options: [];

    // State
    in-out property <int> selected-slot-number: -1;
    in-out property <int> selected-duration: 60;
    in-out property <string> license-plate: "";
    in-out property <string> estimated-cost: "0.00 EUR";
    in-out property <bool> show-booking-panel: false;
    in-out property <int> current-tab: 0;  // 0: lot, 1: calendar, 2: my bookings
    in-out property <bool> is-booking: false;

    // Callbacks
    callback slot-tapped(int);
    callback book-slot(int, int, string);  // slot-number, duration-minutes, license-plate
    callback cancel-booking(string);  // booking-id
    callback refresh();
    callback tab-changed(int);

    VerticalLayout {
        padding: 0;
        spacing: 0;

        // Availability summary bar
        Rectangle {
            height: 50px;
            background: Theme.surface;

            HorizontalLayout {
                padding: Theme.spacing-md;
                alignment: space-between;

                HorizontalLayout {
                    spacing: Theme.spacing-sm;

                    Rectangle {
                        width: 12px;
                        height: 12px;
                        border-radius: 6px;
                        background: root.available-slots > 5 ? Theme.secondary :
                                    root.available-slots > 2 ? Theme.warning : Theme.error;
                        y: (parent.height - self.height) / 2;
                    }

                    Text {
                        text: root.available-slots + " / " + root.total-slots + " " + Tr.parking-slots-available;
                        font-size: Theme.font-size-md;
                        color: Theme.text-primary;
                        vertical-alignment: center;
                    }
                }

                // Tab switcher with Phosphor icons
                HorizontalLayout {
                    spacing: 4px;

                    // Lot tab
                    Rectangle {
                        width: 44px;
                        height: 36px;
                        border-radius: Theme.radius-sm;
                        background: root.current-tab == 0 ? Theme.primary.transparentize(0.8) :
                                    lot-tab.has-hover ? Theme.surface-elevated : transparent;
                        border-width: root.current-tab == 0 ? 1px : 0px;
                        border-color: Theme.primary.transparentize(0.5);

                        lot-tab := TouchArea {
                            clicked => {
                                root.current-tab = 0;
                                root.tab-changed(0);
                            }
                            mouse-cursor: pointer;
                        }

                        Icon {
                            icon: PhosphorIcons.parking;
                            icon-size: 20px;
                            icon-color: root.current-tab == 0 ? Theme.primary : Theme.text-secondary;
                        }
                    }

                    // Calendar tab
                    Rectangle {
                        width: 44px;
                        height: 36px;
                        border-radius: Theme.radius-sm;
                        background: root.current-tab == 1 ? Theme.primary.transparentize(0.8) :
                                    cal-tab.has-hover ? Theme.surface-elevated : transparent;
                        border-width: root.current-tab == 1 ? 1px : 0px;
                        border-color: Theme.primary.transparentize(0.5);

                        cal-tab := TouchArea {
                            clicked => {
                                root.current-tab = 1;
                                root.tab-changed(1);
                            }
                            mouse-cursor: pointer;
                        }

                        Icon {
                            icon: PhosphorIcons.calendar;
                            icon-size: 20px;
                            icon-color: root.current-tab == 1 ? Theme.primary : Theme.text-secondary;
                        }
                    }

                    // Bookings tab
                    Rectangle {
                        width: 44px;
                        height: 36px;
                        border-radius: Theme.radius-sm;
                        background: root.current-tab == 2 ? Theme.primary.transparentize(0.8) :
                                    book-tab.has-hover ? Theme.surface-elevated : transparent;
                        border-width: root.current-tab == 2 ? 1px : 0px;
                        border-color: Theme.primary.transparentize(0.5);

                        book-tab := TouchArea {
                            clicked => {
                                root.current-tab = 2;
                                root.tab-changed(2);
                            }
                            mouse-cursor: pointer;
                        }

                        Icon {
                            icon: PhosphorIcons.list-bullets;
                            icon-size: 20px;
                            icon-color: root.current-tab == 2 ? Theme.primary : Theme.text-secondary;
                        }
                    }

                    // Refresh button
                    Rectangle {
                        width: 36px;
                        height: 36px;
                        border-radius: 18px;
                        background: refresh-touch.has-hover ? Theme.primary.transparentize(0.9) : transparent;

                        refresh-touch := TouchArea {
                            clicked => { root.refresh(); }
                            mouse-cursor: pointer;
                        }

                        Icon {
                            icon: PhosphorIcons.arrows-clockwise;
                            icon-size: 18px;
                            icon-color: refresh-touch.has-hover ? Theme.primary : Theme.text-secondary;
                        }
                    }
                }
            }
        }

        // Main content area
        if root.current-tab == 0 : VerticalLayout {
            padding: Theme.spacing-md;
            spacing: Theme.spacing-sm;
            vertical-stretch: 1;

            // Parking lot visualization
            Card {
                min-height: 420px;
                background: #161616;

                VerticalLayout {
                    padding: Theme.spacing-md;
                    spacing: Theme.spacing-sm;

                    // Simple header
                    HorizontalLayout {
                        height: 28px;
                        alignment: space-between;

                        Text {
                            text: Tr.parking-select-slot;
                            font-size: Theme.font-size-md;
                            font-weight: 600;
                            color: Theme.text-primary;
                            vertical-alignment: center;
                        }

                        // Floor indicator
                        Rectangle {
                            width: 48px;
                            height: 22px;
                            border-radius: 4px;
                            background: #222222;

                            Text {
                                text: "UG-1";
                                font-size: 9px;
                                font-weight: 600;
                                color: #555555;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }
                        }
                    }

                        // Parking area container - realistic car-sized grid
                        Rectangle {
                            vertical-stretch: 1;
                            background: #111111;
                            border-radius: 12px;
                            border-width: 1px;
                            border-color: #252525;

                            VerticalLayout {
                                padding: 16px;
                                spacing: 0;
                                alignment: center;

                                // Row label A
                                HorizontalLayout {
                                    height: 20px;
                                    alignment: start;
                                    padding-left: 4px;
                                    padding-bottom: 4px;

                                    Text {
                                        text: "Reihe A";
                                        font-size: 10px;
                                        font-weight: 600;
                                        color: #555;
                                        vertical-alignment: center;
                                    }
                                }

                                // Top row - slots 1-5 (row 0)
                                HorizontalLayout {
                                    alignment: center;
                                    spacing: 8px;

                                    for slot in root.slots : Rectangle {
                                        width: slot.row == 0 ? 72px : 0;
                                        height: slot.row == 0 ? 130px : 0;
                                        visible: slot.row == 0;
                                        background: transparent;

                                        if slot.row == 0 : ParkingSlot {
                                            slot-number: slot.slot-number;
                                            status: slot.slot-number == root.selected-slot-number ? SlotStatus.Selected : slot.status;
                                            license-plate: slot.license-plate;
                                            end-time: slot.end-time;
                                            is-top-row: true;

                                            tapped => {
                                                if (slot.status == SlotStatus.Available || slot.status == SlotStatus.MyBooking) {
                                                    root.selected-slot-number = slot.slot-number;
                                                    root.show-booking-panel = slot.status == SlotStatus.Available;
                                                    root.slot-tapped(slot.slot-number);
                                                }
                                            }
                                        }
                                    }
                                }

                                // Driving lane between rows
                                DrivingLane { }

                                // Row label B
                                HorizontalLayout {
                                    height: 20px;
                                    alignment: start;
                                    padding-left: 4px;
                                    padding-top: 4px;

                                    Text {
                                        text: "Reihe B";
                                        font-size: 10px;
                                        font-weight: 600;
                                        color: #555;
                                        vertical-alignment: center;
                                    }
                                }

                                // Bottom row - slots 6-10 (row 1)
                                HorizontalLayout {
                                    alignment: center;
                                    spacing: 8px;

                                    for slot in root.slots : Rectangle {
                                        width: slot.row == 1 ? 72px : 0;
                                        height: slot.row == 1 ? 130px : 0;
                                        visible: slot.row == 1;
                                        background: transparent;

                                        if slot.row == 1 : ParkingSlot {
                                            slot-number: slot.slot-number;
                                            status: slot.slot-number == root.selected-slot-number ? SlotStatus.Selected : slot.status;
                                            license-plate: slot.license-plate;
                                            end-time: slot.end-time;
                                            is-top-row: false;

                                            tapped => {
                                                if (slot.status == SlotStatus.Available || slot.status == SlotStatus.MyBooking) {
                                                    root.selected-slot-number = slot.slot-number;
                                                    root.show-booking-panel = slot.status == SlotStatus.Available;
                                                    root.slot-tapped(slot.slot-number);
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }

                        // Entry/Exit indicators - simplified
                        HorizontalLayout {
                            height: 24px;
                            alignment: space-between;
                            padding-top: 4px;

                            Text {
                                text: "← Einfahrt";
                                font-size: 10px;
                                color: Theme.secondary;
                                vertical-alignment: center;
                            }

                            Text {
                                text: "Ausfahrt →";
                                font-size: 10px;
                                color: Theme.warning;
                                vertical-alignment: center;
                            }
                        }
                    }
            }

            // Legend
            Rectangle {
                height: 32px;
                background: Theme.surface;
                border-radius: Theme.radius-sm;

                HorizontalLayout {
                    alignment: center;
                    spacing: Theme.spacing-md;
                    padding-left: Theme.spacing-md;
                    padding-right: Theme.spacing-md;

                    for legend in [
                        { color: Theme.secondary, label: Tr.parking-available },
                        { color: Theme.error, label: Tr.parking-occupied },
                        { color: Theme.info, label: Tr.parking-my-booking },
                        { color: Theme.primary, label: Tr.parking-selected },
                    ] : HorizontalLayout {
                        spacing: 4px;

                        Rectangle {
                            width: 10px;
                            height: 10px;
                            border-radius: 2px;
                            background: legend.color;
                            y: (parent.height - self.height) / 2;
                        }
                        Text {
                            text: legend.label;
                            font-size: Theme.font-size-xs;
                            color: Theme.text-secondary;
                            vertical-alignment: center;
                        }
                    }
                }
            }

            // Booking panel (when slot selected)
            if root.show-booking-panel && root.selected-slot-number > 0 : Card {
                VerticalLayout {
                    padding: Theme.spacing-md;
                    spacing: Theme.spacing-md;

                    // Header with close button
                    HorizontalLayout {
                        alignment: space-between;

                        Text {
                            text: Tr.parking-book-now + " - Slot " + root.selected-slot-number;
                            font-size: Theme.font-size-lg;
                            font-weight: 600;
                            color: Theme.text-primary;
                            vertical-alignment: center;
                        }

                        // Close button
                        Rectangle {
                            width: 28px;
                            height: 28px;
                            border-radius: 14px;
                            background: close-panel-touch.has-hover ? Theme.text-tertiary.transparentize(0.8) : transparent;

                            close-panel-touch := TouchArea {
                                clicked => {
                                    root.show-booking-panel = false;
                                    root.selected-slot-number = -1;
                                }
                                mouse-cursor: pointer;
                            }

                            Text {
                                text: "✕";
                                font-size: 14px;
                                color: Theme.text-secondary;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }
                        }
                    }

                    // Duration selector
                    VerticalLayout {
                        spacing: Theme.spacing-xs;

                        Text {
                            text: Tr.parking-duration;
                            font-size: Theme.font-size-sm;
                            color: Theme.text-secondary;
                        }

                        DurationSelector {
                            options: root.duration-options;
                            selected-minutes: root.selected-duration;
                            duration-changed(mins) => {
                                root.selected-duration = mins;
                            }
                        }
                    }

                    // License plate input
                    VerticalLayout {
                        spacing: Theme.spacing-xs;

                        Text {
                            text: Tr.parking-license-plate;
                            font-size: Theme.font-size-sm;
                            color: Theme.text-secondary;
                        }

                        Rectangle {
                            height: 44px;
                            background: Theme.background;
                            border-radius: Theme.radius-md;
                            border-width: 1px;
                            border-color: Theme.border;

                            license-input := TextInput {
                                text <=> root.license-plate;
                                font-size: Theme.font-size-md;
                                color: Theme.text-primary;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }
                        }
                    }

                    // Cost and book button
                    HorizontalLayout {
                        spacing: Theme.spacing-md;
                        alignment: stretch;

                        VerticalLayout {
                            horizontal-stretch: 1;
                            spacing: 2px;

                            Text {
                                text: Tr.parking-estimated-cost;
                                font-size: Theme.font-size-xs;
                                color: Theme.text-secondary;
                            }
                            Text {
                                text: root.estimated-cost;
                                font-size: Theme.font-size-xl;
                                font-weight: 700;
                                color: Theme.primary;
                            }
                        }

                        Button {
                            horizontal-stretch: 1;
                            text: root.is-booking ? "..." : Tr.parking-confirm;
                            primary: true;
                            loading: root.is-booking;
                            clicked => {
                                root.book-slot(root.selected-slot-number, root.selected-duration, root.license-plate);
                            }
                        }
                    }
                }
            }
        }

        // Calendar view (tab 1)
        if root.current-tab == 1 : VerticalLayout {
            padding: Theme.spacing-md;
            spacing: Theme.spacing-md;
            vertical-stretch: 1;

            Text {
                text: Tr.calendar-title;
                font-size: Theme.font-size-lg;
                font-weight: 600;
                color: Theme.text-primary;
            }

            Card {
                vertical-stretch: 1;

                VerticalLayout {
                    padding: Theme.spacing-lg;
                    spacing: Theme.spacing-lg;
                    alignment: center;

                    // Calendar icon (graphical)
                    Rectangle {
                        width: 80px;
                        height: 80px;
                        border-radius: Theme.radius-lg;
                        background: Theme.primary.transparentize(0.9);

                        // Calendar shape
                        Rectangle {
                            width: 44px;
                            height: 48px;
                            x: (parent.width - self.width) / 2;
                            y: (parent.height - self.height) / 2;
                            border-radius: 6px;
                            border-width: 2px;
                            border-color: Theme.primary;
                            background: transparent;

                            // Top bar (header)
                            Rectangle {
                                width: parent.width;
                                height: 14px;
                                border-radius: 4px;
                                border-bottom-left-radius: 0;
                                border-bottom-right-radius: 0;
                                background: Theme.primary;
                            }

                            // Calendar rings
                            Rectangle {
                                width: 4px;
                                height: 10px;
                                border-radius: 2px;
                                background: Theme.primary;
                                x: 10px;
                                y: -4px;
                            }
                            Rectangle {
                                width: 4px;
                                height: 10px;
                                border-radius: 2px;
                                background: Theme.primary;
                                x: parent.width - 14px;
                                y: -4px;
                            }

                            // Grid dots representing days
                            for row in 2: VerticalLayout {
                                y: 18px + row * 12px;
                                x: 6px;

                                HorizontalLayout {
                                    spacing: 6px;
                                    for col in 4: Rectangle {
                                        width: 6px;
                                        height: 6px;
                                        border-radius: 1px;
                                        background: Theme.text-tertiary;
                                    }
                                }
                            }
                        }
                    }

                    VerticalLayout {
                        spacing: Theme.spacing-xs;
                        alignment: center;

                        Text {
                            text: Tr.calendar-coming-soon;
                            font-size: Theme.font-size-lg;
                            font-weight: 500;
                            color: Theme.text-primary;
                            horizontal-alignment: center;
                        }

                        Text {
                            text: Tr.calendar-desc;
                            font-size: Theme.font-size-sm;
                            color: Theme.text-tertiary;
                            horizontal-alignment: center;
                            wrap: word-wrap;
                        }
                    }
                }
            }
        }

        // My bookings view (tab 2)
        if root.current-tab == 2 : VerticalLayout {
            padding: Theme.spacing-md;
            spacing: Theme.spacing-sm;
            vertical-stretch: 1;

            Text {
                text: Tr.calendar-my-bookings;
                font-size: Theme.font-size-lg;
                font-weight: 600;
                color: Theme.text-primary;
            }

            if root.my-bookings.length == 0 : Card {
                vertical-stretch: 1;

                VerticalLayout {
                    padding: Theme.spacing-lg;
                    alignment: center;

                    Text {
                        text: Tr.calendar-no-bookings;
                        font-size: Theme.font-size-md;
                        color: Theme.text-tertiary;
                        horizontal-alignment: center;
                    }
                }
            }

            for booking in root.my-bookings : Card {
                HorizontalLayout {
                    padding: Theme.spacing-md;
                    spacing: Theme.spacing-md;

                    // Slot number badge
                    Rectangle {
                        width: 50px;
                        height: 50px;
                        border-radius: Theme.radius-md;
                        background: Theme.primary.transparentize(0.8);

                        Text {
                            text: booking.slot-number;
                            font-size: Theme.font-size-xl;
                            font-weight: 700;
                            color: Theme.primary;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }

                    // Booking details
                    VerticalLayout {
                        horizontal-stretch: 1;
                        spacing: 2px;

                        Text {
                            text: "Slot " + booking.slot-number;
                            font-size: Theme.font-size-md;
                            font-weight: 600;
                            color: Theme.text-primary;
                        }

                        Text {
                            text: booking.start-time + " - " + booking.end-time;
                            font-size: Theme.font-size-sm;
                            color: Theme.text-secondary;
                        }

                        if booking.license-plate != "" : Text {
                            text: booking.license-plate;
                            font-size: Theme.font-size-xs;
                            color: Theme.text-tertiary;
                        }
                    }

                    // Cancel button
                    Rectangle {
                        width: 36px;
                        height: 36px;
                        border-radius: 18px;
                        background: cancel-touch.has-hover ? Theme.error.transparentize(0.7) : Theme.error.transparentize(0.9);

                        cancel-touch := TouchArea {
                            clicked => { root.cancel-booking(booking.id); }
                            mouse-cursor: pointer;
                        }

                        Text {
                            text: "✕";
                            font-size: 14px;
                            font-weight: 600;
                            color: Theme.error;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                }
            }
        }
    }
}
