// Parking View - Main parking lot display and booking

import { Theme } from "theme.slint";
import { Tr } from "i18n.slint";
import { Button, Card } from "components/mod.slint";
import { PhosphorIcons, Icon } from "icons.slint";

// Slot status enum
export enum SlotStatus {
    Available,
    Occupied,
    Selected,
    MyBooking,
    Disabled,
}

// Parking slot data structure
export struct ParkingSlotData {
    id: string,
    slot-number: int,
    row: int,
    col: int,
    status: SlotStatus,
    license-plate: string,
    end-time: string,
    booked-by: string,
}

// Booking data structure
export struct BookingData {
    id: string,
    slot-number: int,
    start-time: string,
    end-time: string,
    license-plate: string,
    status: string,
}

// Duration option
export struct DurationOption {
    minutes: int,
    label: string,
}

