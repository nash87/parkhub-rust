    in property <color> glass-color: #2d3748;
    in property <bool> is-my-booking: false;

    width: 56px;
    height: 100px;
    background: transparent;

    // Car body - main shape
    Rectangle {
        width: parent.width;
        height: parent.height;
        border-radius: 12px;
        background: root.car-color;

        // Front hood gradient
        Rectangle {
            width: parent.width - 8px;
            height: 28px;
            x: 4px;
            y: 6px;
            border-radius: 8px;
            background: root.car-color.darker(0.15);
        }

        // Windshield (front glass)
        Rectangle {
            width: parent.width - 12px;
            height: 18px;
            x: 6px;
            y: 22px;
            border-radius: 4px;
            background: root.glass-color;
            border-width: 1px;
            border-color: #4a5568;
        }

        // Roof section
        Rectangle {
            width: parent.width - 8px;
            height: 28px;
            x: 4px;
            y: 42px;
            border-radius: 4px;
            background: root.car-color.mix(white, 0.1);
        }

        // Rear window
        Rectangle {
            width: parent.width - 16px;
            height: 14px;
            x: 8px;
            y: 72px;
            border-radius: 3px;
            background: root.glass-color;
            border-width: 1px;
            border-color: #4a5568;
        }

        // Left side mirror
        Rectangle {
            width: 8px;
            height: 14px;
            x: -4px;
            y: 24px;
            border-radius: 3px;
            background: root.car-color.darker(0.1);
        }

        // Right side mirror
        Rectangle {
            width: 8px;
            height: 14px;
            x: parent.width - 4px;
            y: 24px;
            border-radius: 3px;
            background: root.car-color.darker(0.1);
        }

        // Front left headlight
        Rectangle {
            width: 10px;
            height: 6px;
            x: 6px;
            y: 4px;
            border-radius: 2px;
            background: #fef3c7;
            border-width: 1px;
            border-color: #fcd34d;
        }

        // Front right headlight
        Rectangle {
            width: 10px;
            height: 6px;
            x: parent.width - 16px;
            y: 4px;
            border-radius: 2px;
            background: #fef3c7;
            border-width: 1px;
            border-color: #fcd34d;
        }

        // Rear left taillight
        Rectangle {
            width: 8px;
            height: 5px;
            x: 6px;
            y: parent.height - 8px;
            border-radius: 1px;
            background: #ef4444;
        }

        // Rear right taillight
        Rectangle {
            width: 8px;
            height: 5px;
            x: parent.width - 14px;
            y: parent.height - 8px;
            border-radius: 1px;
            background: #ef4444;
        }

        // Left front wheel
        Rectangle {
            width: 6px;
            height: 16px;
            x: -2px;
            y: 10px;
            border-radius: 2px;
            background: #1a1a1a;
        }

        // Right front wheel
        Rectangle {
            width: 6px;
            height: 16px;
            x: parent.width - 4px;
            y: 10px;
            border-radius: 2px;
            background: #1a1a1a;
