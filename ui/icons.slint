// Icon component using Phosphor font
export component Icon inherits Text {
    in property <string> icon;
    in property <color> icon-color: #cccccc;
    in property <length> icon-size: 16px;

    text: icon;
    font-family: "Phosphor";
    font-size: icon-size;
    color: icon-color;
    horizontal-alignment: center;
    vertical-alignment: center;
}
